@model SGE.Entidades.Dispositivos.Catalogo

@{
    ViewBag.Title = "Create";
}

<h2>Agregar al Catalogo</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Catalogo</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ConsumoEnergia, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ConsumoEnergia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ConsumoEnergia, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IdentificadorFabrica, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.IdentificadorFabrica, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IdentificadorFabrica, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AdministradorId, "AdministradorId", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("AdministradorId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.AdministradorId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="height: 100px">
        @Html.LabelFor(model => model.Sensores, "Sensores", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("sensoresIds", (MultiSelectList)ViewBag.Sensores, htmlAttributes: new { @class = "form-control", multiple = "multiple", style = "height: 100px" })
            @Html.ValidationMessageFor(model => model.Sensores, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="height: 200px">
        @Html.LabelFor(model => model.Acciones, "Acciones", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("accionesIds", (MultiSelectList)ViewBag.Acciones, htmlAttributes: new { @class = "form-control", multiple = "multiple", style = "height: 200px" })
            @Html.ValidationMessageFor(model => model.Acciones, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
