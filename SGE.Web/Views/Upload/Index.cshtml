@model IEnumerable<SGE.Entidades.Usuario>
@{
    ViewBag.Title = "Carga de Datos";
}

<h3>Archivo de Dispositivos y Usuarios</h3>

@using (Html.BeginForm("CargarArchivo", "Upload", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div style="width: 40%; float:left; ">
        <input type="file" name="file" class="filestyle" data-buttonName="btn-primary" data-buttonBefore="true" data-buttonText="Seleccionar..." />
    </div>
    <div style="width: 60%; float:left; ">
        <input type="submit" name="CargarDatos" id="CargarDatos" value="Cargar" class="btn btn-primary" />
        @Html.ActionLink("Restablecer", "Restablecer", null, new { @class = "btn btn-danger" })

    </div>
}


<br />
<br />
<br />

@if (Model != null && Model.Count() > 0)
{
    <h3>Listado de Usuarios del Sistema</h3>
    <table class="table table-hover">
        <tr>
            <th>
                #
            </th>
            <th>
                Nombre
            </th>
            <th>
                Apellido
            </th>
            <th>
                Password
            </th>
            <th>
                Fecha de Alta
            </th>
            <th>
                Direccion
            </th>
            <th>
                Tipo
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.Raw(item.Id)
                </td>
                <td>
                    @Html.Raw(item.Nombre)
                </td>
                <td>
                    @Html.Raw(item.Apellido)
                </td>
                <td>
                    @Html.Raw(item.Password)
                </td>
                <td>
                    @Html.Raw(item.FechaAlta)
                </td>
                <td>
                    @Html.Raw(item.Direccion)
                </td>
                <td>
                    @Html.Raw(item.GetType().Name)
                </td>
            </tr>
        }
    </table>
    <br />

    <h3>Listado de Dispositivos</h3>

    <table class="table table-hover">
        <tr>
            <th>
                # Cliente
            </th>
            <th>
                Nombre y Apellido
            </th>
            <th>
                Dispositivo
            </th>
            <th>
                Consumo
            </th>
            <th>
                Esta Encendido?
            </th>
        </tr>

        @foreach (var item in Model)
        {
            if (item.GetType().Name == "Cliente")
            {
                foreach (var dispositivo in ((SGE.Entidades.Cliente)item).Dispositivos)
                {
                    <tr>
                        <td>
                            @Html.Raw(item.Id)
                        </td>
                        <td>
                            @Html.Raw(string.Format("{0} {1}", item.Nombre, item.Apellido))
                        </td>
                        <td>
                            @Html.Raw(dispositivo.Nombre)
                        </td>
                        <td>
                            @Html.Raw(dispositivo.ConsumoEnergia)
                        </td>
                        <td>
                            @Html.Raw(dispositivo.EstaEncendido ? "SI" : "NO")
                        </td>
                    </tr>
                }
            }
        }
    </table>
}


@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
