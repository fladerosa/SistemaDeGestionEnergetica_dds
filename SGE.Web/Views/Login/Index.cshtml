@model SGE.Entidades.Usuarios.Usuario

@{
    Layout = null;
   /* ViewBag.Title = "Ingreso";*/
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" type="text/css" href="~/Content/Login.css">
    <title>Login</title>

</head>
<body>
    <h3> @Html.ActionLink("Volver", "Index", "Home")</h3>
        <div id="Login-div">
            <h2 style="text-decoration: underline;text-align:center;"> Acceso a SGE </h2>
            <div class="imgcontainer">
                <img src="~/Images/avatar.png" alt="Avatar" class="avatar">
            </div>

            @using (Html.BeginForm("Autorizado", "Login", FormMethod.Post))
        {
            <table>
                <tr>
                    <td></td>
                </tr>
                <tr name="usuario">
                    <td>@Html.LabelFor(model => model.NombreUsuario)</td>
                    <td>@Html.EditorFor(model => model.NombreUsuario)</td>
                </tr>
                <tr>
                    <td></td>
                    <td>@Html.ValidationMessageFor(model => model.NombreUsuario)</td>
                </tr>
                <tr name="contrasenia">
                    <td>@Html.LabelFor(model => model.Password)</td>
                    <td>@Html.EditorFor(model => model.Password)</td>
                </tr>
                <tr>
                    <td></td>
                    <td>@Html.ValidationMessageFor(model => model.Password)</td>
                </tr>
                <tr>
                    <td colspan="2">
                        <label class="field-validation-error">@Html.DisplayFor(model => model.MensajeDeErrorLogueo)</label>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" name="name" value="Aceptar" /></td>
                    <!-- <td><input type="reset" name="name" value="Borrar" /></td>-->
                </tr>
            </table>

    }
        </div>
            <script src="~/Scripts/jquery-1.10.2.min.js"></script>
            <script src="~/Scripts/jquery.validate.min.js"></script>
            <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        </body>
</html> 
